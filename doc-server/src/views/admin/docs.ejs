<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document Manager - Guru Maa Admin</title>
  <style>
    * {
      box-sizing: border-box;
      margin: 0;
      padding: 0;
      font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
    }

    body {
      background: #f5f7fa;
      color: #333;
    }

    .admin-layout {
      display: flex;
      min-height: 100vh;
    }

    .main-content {
      flex: 1;
      margin-left: 260px;
      padding: 30px;
    }

    @media (max-width: 768px) {
      .main-content {
        margin-left: 0;
        padding: 20px;
      }
    }

    .page-header {
      margin-bottom: 30px;
    }

    .page-header h1 {
      margin: 0 0 8px 0;
      font-size: 28px;
      color: #2c3e50;
    }

    .page-header p {
      margin: 0;
      color: #7f8c8d;
      font-size: 14px;
    }

    .card {
      background: white;
      border-radius: 12px;
      padding: 30px;
      box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
      margin-bottom: 25px;
    }

    .card h2 {
      margin: 0 0 20px 0;
      color: #2c3e50;
      font-size: 18px;
      border-bottom: 2px solid #667eea;
      padding-bottom: 12px;
    }

    .upload-form {
      display: flex;
      gap: 12px;
      flex-wrap: wrap;
    }

    .upload-form input[type="file"] {
      flex: 1;
      min-width: 200px;
      padding: 12px;
      border: 2px dashed #bbb;
      border-radius: 8px;
      background: #fafafa;
      cursor: pointer;
    }

    .upload-form button {
      padding: 12px 24px;
      border: none;
      border-radius: 8px;
      background: linear-gradient(135deg, #667eea, #764ba2);
      color: white;
      font-weight: 600;
      cursor: pointer;
      transition: 0.2s;
    }

    .upload-form button:hover {
      opacity: 0.9;
      transform: translateY(-1px);
    }

    table {
      width: 100%;
      border-collapse: collapse;
      font-size: 14px;
    }

    thead {
      background: #667eea;
      color: white;
    }

    th,
    td {
      padding: 12px 14px;
      text-align: left;
    }

    tbody tr {
      border-bottom: 1px solid #eee;
      transition: 0.15s;
    }

    tbody tr:hover {
      background: #f7f9ff;
    }

    .btn-open {
      background: #4caf50;
      color: white;
      text-decoration: none;
      padding: 6px 12px;
      border-radius: 6px;
      font-size: 12px;
    }

    .btn-delete {
      background: #ff4d4d;
      color: white;
      border: none;
      padding: 6px 12px;
      border-radius: 6px;
      font-size: 12px;
      cursor: pointer;
    }

    .btn-delete:hover {
      background: #e63939;
    }

    .empty-state {
      text-align: center;
      padding: 40px 20px;
      color: #7f8c8d;
    }

    .empty-icon {
      font-size: 48px;
      margin-bottom: 15px;
    }

    @media (max-width: 768px) {

      table,
      thead,
      tbody,
      th,
      td,
      tr {
        display: block;
      }

      thead {
        display: none;
      }

      tbody tr {
        margin-bottom: 12px;
        border-radius: 10px;
        padding: 10px;
        box-shadow: 0 5px 12px rgba(0, 0, 0, 0.05);
      }

      td {
        padding: 8px 0;
      }

      td::before {
        content: attr(data-label);
        font-weight: 600;
        display: block;
        color: #555;
        font-size: 12px;
        margin-bottom: 4px;
      }
    }
  </style>
  <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/toastify-js/src/toastify.min.css">
</head>

<body>
  <div class="admin-layout">
    <%- include('./layouts/sidebar', { currentPage: 'docs' }) %>

      <div class="main-content">
        <!-- Page Header -->
        <div class="page-header">
          <h1>üìÅ Document Manager</h1>
          <p>Upload and manage your documents</p>
        </div>

        <!-- Upload Card -->
        <div class="card">
          <h2>üì§ Upload Document</h2>
          <form method="post" action="/admin/docs/upload" enctype="multipart/form-data" class="upload-form">
            <input type="file" name="file" required />
            <button type="submit">Upload</button>
          </form>
        </div>

        <!-- Documents Table -->
        <div class="card">
          <h2>üìã Documents</h2>
          <% if (docs && docs.length> 0) { %>
            <table>
              <thead>
                <tr>
                  <th>Title</th>
                  <th>Folder</th>
                  <th>Type</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody>
                <% docs.forEach(function(doc) { %>
                  <tr>
                    <td data-label="Title">
                      <%= doc.title %>
                    </td>
                    <td data-label="Folder">
                      <%= doc.folder || 'Root' %>
                    </td>
                    <td data-label="Type">
                      <%= doc.type || 'File' %>
                    </td>
                    <td data-label="Actions">
                      <a href="<%= doc.url %>" target="_blank" class="btn-open">View</a>
                      <form method="post" action="/admin/docs/delete" style="display:inline;">
                        <input type="hidden" name="id" value="<%= doc.id %>" />
                        <button type="submit" class="btn-delete" onclick="return confirm('Delete this file?')">
                          Delete
                        </button>
                      </form>
                    </td>
                  </tr>
                  <% }) %>
              </tbody>
            </table>
            <% } else { %>
              <div class="empty-state">
                <div class="empty-icon">üì≠</div>
                <p>No documents yet. Upload your first document above.</p>
              </div>
              <% } %>
        </div>
      </div>
  </div>

  <%- include('./layouts/flash-toast') %>
</body>

</html>