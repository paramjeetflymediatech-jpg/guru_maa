<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit User - Guru Maa Admin</title>
    <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/toastify-js/src/toastify.min.css">
    <style>
        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
            font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
        }

        body {
            background: #f5f7fa;
            color: #333;
        }

        .admin-layout {
            display: flex;
            min-height: 100vh;
        }

        .main-content {
            flex: 1;
            margin-left: 260px;
            padding: 30px;
        }

        @media (max-width: 768px) {
            .main-content {
                margin-left: 0;
                padding: 20px;
            }
        }

        .page-header {
            margin-bottom: 30px;
        }

        .page-header h1 {
            margin: 0 0 8px 0;
            font-size: 28px;
            color: #2c3e50;
        }

        .card {
            background: white;
            border-radius: 12px;
            padding: 30px;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
            max-width: 600px;
            margin: 0 auto;
        }

        .form-group {
            margin-bottom: 20px;
        }

        .form-group label {
            display: block;
            margin-bottom: 8px;
            font-weight: 600;
            font-size: 14px;
            color: #444;
        }

        .form-group input,
        .form-group select {
            width: 100%;
            padding: 12px;
            border: 1px solid #ddd;
            border-radius: 8px;
            font-size: 14px;
            transition: 0.2s;
        }

        .form-group input:focus,
        .form-group select:focus {
            border-color: #667eea;
            outline: none;
            box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
        }

        .btn-primary {
            background: linear-gradient(135deg, #667eea, #764ba2);
            color: white;
            padding: 12px 24px;
            border: none;
            border-radius: 8px;
            cursor: pointer;
            font-weight: 600;
            font-size: 14px;
            width: 100%;
            transition: 0.2s;
        }

        .btn-primary:hover {
            opacity: 0.9;
            transform: translateY(-2px);
        }

        .btn-back {
            display: inline-block;
            margin-bottom: 20px;
            color: #666;
            text-decoration: none;
            font-size: 14px;
            display: flex;
            align-items: center;
            gap: 5px;
        }

        .btn-back:hover {
            color: #333;
        }
    </style>
</head>

<body>

    <div class="admin-layout">
        <%- include('../layouts/sidebar', { currentPage: 'users' }) %>

            <div class="main-content">
                <a href="/admin/users" class="btn-back">‚Üê Back to Users</a>

                <div class="page-header" style="text-align: center;">
                    <h1>Edit User</h1>
                    <p>Update user information</p>
                </div>

                <div class="card">
                    <% if (user) { %>
                        <form id="editUserForm" action="/admin/users/update" method="post" novalidate>
                            <input type="hidden" name="id" value="<%= user._id %>">

                            <div class="form-group">
                                <label>Full Name</label>
                                <input type="text" name="name" id="name" value="<%= user.name %>" required>
                            </div>
                            <div class="form-group">
                                <label>Email Address</label>
                                <input type="email" name="email" id="email" value="<%= user.email %>" required>
                            </div>
                            <div class="form-group">
                                <label>Role</label>
                                <select name="role">
                                    <option value="user" <%=user.role==='user' ? 'selected' : '' %>>User</option>
                                    <option value="admin" <%=user.role==='admin' ? 'selected' : '' %>>Admin</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label>Account Status</label>
                                <select name="status">
                                    <option value="active" <%=user.status==='active' ? 'selected' : '' %>>Active
                                    </option>
                                    <option value="inactive" <%=user.status==='inactive' ? 'selected' : '' %>>Inactive
                                    </option>
                                </select>
                            </div>
                            <button type="submit" class="btn-primary">Update User</button>
                        </form>
                        <% } else { %>
                            <div style="text-align:center; padding: 20px;">
                                <h3>User not found</h3>
                                <p>The requested user does not exist.</p>
                            </div>
                            <% } %>
                </div>
            </div>
    </div>

    <%- include('../layouts/flash-toast') %>

        <script>
            const editForm = document.getElementById('editUserForm');
            if (editForm) {
                editForm.addEventListener('submit', function (e) {
                    const name = document.getElementById('name').value.trim();
                    const email = document.getElementById('email').value.trim();

                    if (!name) {
                        e.preventDefault();
                        showToast('Full Name is required', 'error');
                        return;
                    }

                    if (!email) {
                        e.preventDefault();
                        showToast('Email Address is required', 'error');
                        return;
                    }

                    const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
                    if (!emailRegex.test(email)) {
                        e.preventDefault();
                        showToast('Please enter a valid email address', 'error');
                        return;
                    }
                });
            }
        </script>

</body>

</html>